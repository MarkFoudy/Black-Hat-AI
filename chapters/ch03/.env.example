# OpenAI API Key (required for LLM-powered agents)
OPENAI_API_KEY=your_api_key_here

# Prohibited hosts - comma-separated list of keywords to block
# Targets containing these strings will be automatically rejected by gates
PROHIBITED_HOSTS=prod,payment,core-db

# Enable/disable safety gates globally (default: true)
SAFETY_GATES_ENABLED=true

# Run directory for artifacts (default: runs/)
ARTIFACT_RUN_DIR=runs
