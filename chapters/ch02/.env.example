# OpenAI API Configuration (for LangChain examples)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_org_id_here  # Optional

# Model Configuration
OPENAI_MODEL=gpt-4-turbo-preview  # or gpt-3.5-turbo for lower cost
OPENAI_TEMPERATURE=0.2

# Agent Configuration
AGENT_TIMEOUT=30  # seconds
MAX_ITERATIONS=10

# Logging Configuration
LOG_LEVEL=INFO
ARTIFACT_LOG_DIR=runs  # Directory for artifact logs

# Safety Configuration
ENABLE_SAFETY_GATES=true
PROHIBITED_HOSTS=prod,payment,core-db

# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!
